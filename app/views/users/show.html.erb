<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <% if current_user == @user %>
            <h3 class="display-4" align="center">
                <%= gravatar_for @user %><br><br>
                Hello <%= @user.username %>
            </h3>
            <p class="lead">
                Your login: <%= @user.email %>
            </p>
        <% else %>
            <h3 class="display-4" align="center">
                <%= gravatar_for @user %><br><br>
                <%= @user.username %>'s notes
            </h3>
        <% end %>
    </div>
</div>
<% if current_user == @user %>
    <h2 align="center">
        Your notes
    </h2>
<% end %>
<% if current_user.notes != nil %>
    <%= render 'notes/note', obj: @user.notes %>
<% else %>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h5 align="center">You don't have any notes :-(</h5>
        </div>
    </div>
<% end %>
