<h1>Wszystkie notatki</h1>

<p>
    <%= link_to "Nowa notatka", new_note_path %>
</p>


<% @notes.each do |note| %>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h3 class="display-5">
                <%= note.title %>
            </h3>
            <p class="lead">
                <%= note.description %>
            </p>
            <small>
                <hr>
                Created by: <%= note.user.username if note.user %> <br>
                Created at: <%= time_ago_in_words(note.created_at) %> ago. <br>
                Last updated at: <%= time_ago_in_words(note.updated_at) %> ago.
            </small>
            <hr>
            <%= link_to "PokaÅ¼", note_path(note) , class: "btn btn-sm btn-success" %>
            <%= link_to "Edytuj", edit_note_path(note) , class: "btn btn-sm btn-primary" %>
            <%= link_to 'UsuÅ„', note_path(note), method: :delete, data: {confirm: "Na pewno?"}, class: "btn btn-sm btn-danger" %>
        </div>
    </div>
<% end %>