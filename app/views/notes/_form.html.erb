<% if @note.errors.any? %>
<ul>
    <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @note do |f| %>
  <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
  </p>
  <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
  </p>
  <p>
      <%= f.submit %>
  </p>
<% end %>

<p>
    <%= link_to "Wroc do listy", notes_path %>
</p>